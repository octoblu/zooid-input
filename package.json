{
  "name": "zooid-input",
  "version": "2.3.1",
  "description": "Input",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "webpack",
    "build:storybook": "build-storybook -o storybook-build",
    "clean": "rimraf lib dist coverage",
    "coverage": "nyc report --reporter=lcov",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint src stories",
    "lint:js:fix": "eslint src stories --fix",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:css:fix": "stylefmt ./src/**/*.css",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 9001",
    "test": "nyc --require babel-core/register --require babel-polyfill mocha",
    "test:watch": "mocha -w -R mocha-multi --reporter-options spec=-,mocha-osx-reporter=-"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/octoblu/zooid-input.git"
  },
  "keywords": [
    "zooid",
    "zooid-ui",
    "react",
    "reactjs",
    "octoblu"
  ],
  "author": "Octoblu Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/octoblu/zooid-input/issues"
  },
  "homepage": "https://github.com/octoblu/zooid-input#readme",
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ]
  },
  "greenkeeper": {
    "emails": false
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.18.0",
    "css-loader": "^0.25.0",
    "css-modules-require-hook": "^4.0.3",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "ignore-styles": "^5.0.0",
    "jsdom": "^9.8.3",
    "mocha": "^3.1.0",
    "mocha-multi": "^0.9.0",
    "mocha-osx-reporter": "^0.1.2",
    "nyc": "^8.3.0",
    "postcss-loader": "^1.1.0",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "stylefmt": "^4.3.1",
    "stylelint": "^7.5.0",
    "stylelint-config-standard": "^13.0.2",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "@kadira/react-storybook-addon-info": "^3.0.8",
    "@kadira/storybook": "^2.28.1",
    "blacklist": "^1.1.4",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.0",
    "classnames": "^2.2.5",
    "enzyme": "^2.4.0",
    "react": "^15.3.2",
    "sinon-chai": "^2.8.0",
    "zooid-form-field": "^1.0.3",
    "zooid-form-label": "^1.0.1"
  }
}
